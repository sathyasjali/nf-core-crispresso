/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running tests with REDRAW data
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run pipeline test with real REDRAW data.

    Use as follows:
        nextflow run nf-core/crispresso -profile test_redraw,conda --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'REDRAW test profile'
    config_profile_description = 'Test dataset using real REDRAW publication data'

    // Input data - using local REDRAW test files
    input  = "${projectDir}/assets/samplesheet_redraw.csv"
    
    // CRISPResso2 parameters for REDRAW data (extracted from actual sequence content)
    amplicon_seq = "GAGTCCGAGCAGAAGAAGAAGGGCTCCCATCACATCAACCGGTGGCGCATTGCCACGAAGCAGGCCAATGGGGAGGACATCGATGTCACCTCCAATGACTAGGGTGGGCTCGCATCTCTCCTTCACGCGCCCGCCGCCCTACCTGAGGCCGCCATCCACGCCGGTTGAGTCGCGTTCTGCCGCCTCCCGCGACACTCTACAACCTGTTCACCCAC"
    guide_seq = "GGCGCATTGCCACGAAGCAG"
    
    // Genome reference
    genome = null
    igenomes_ignore = true
    
    // Maximum resource usage
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'
}
