/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for Base Editor publication test data
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Real CRISPResso publication dataset for base editing testing

    Use as follows:
        nextflow run nf-core/crispresso -profile test_base_editor,conda --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Base Editor publication test'
    config_profile_description = 'Test with real base editor publication dataset from CRISPResso authors'

    // Input data - Base editor publication dataset
    input  = "${projectDir}/assets/samplesheet_test.csv"

    // CRISPResso2 parameters for base editor dataset (from documentation)
    amplicon_seq = "GGCCCCAGTGGCTGCTCTGGGGGCCTCCTGAGTTTCTCATCTGTGCCCCTCCCTCCCTGGCCCAGGTGAAGGTGTGGTTCCAGAACCGGAGGACAAAGTACAAACGGCAGAAGCTGGAGGAGGAAGGGCCTGAGTCCGAGCAGAAGAAGAAGGGCTCCCATCACATCAACCGGTGGCGCATTGCCACGAAGCAGGCCAATGGGGAGGACATCGATGTCACCTCCAATGACTAGGGTGG"
    guide_seq = "GAGTCCGAGCAGAAGAAGAA"
    quantification_window_size = 10
    quantification_window_center = -10

    // Genome reference
    genome = null
    igenomes_ignore = true

    // Maximum resource usage
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'
}
