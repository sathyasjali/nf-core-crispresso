<svg width="800" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      .pipeline-text { font-family: Arial, sans-serif; font-size: 14px; font-weight: bold; fill: #333; }
      .tool-text { font-family: Arial, sans-serif; font-size: 12px; fill: #666; }
      .nf-green { fill: #24B064; }
      .nf-blue { fill: #0D4F8C; }
      .light-blue { fill: #87CEEB; }
      .light-green { fill: #90EE90; }
    </style>
  </defs>

  <!-- Background -->
  <rect width="800" height="400" fill="white"/>

  <!-- Title -->
  <text x="400" y="30" text-anchor="middle" class="pipeline-text" font-size="18">nf-core/crispresso Pipeline</text>

  <!-- Input Stage -->
  <rect x="50" y="80" width="120" height="60" rx="10" class="light-blue" stroke="#0D4F8C" stroke-width="2"/>
  <text x="110" y="105" text-anchor="middle" class="pipeline-text">Input Data</text>
  <text x="110" y="120" text-anchor="middle" class="tool-text">FASTQ Files</text>

  <!-- FastQC Stage -->
  <rect x="220" y="80" width="120" height="60" rx="10" class="nf-green" stroke="#24B064" stroke-width="2"/>
  <text x="280" y="105" text-anchor="middle" class="pipeline-text" fill="white">FastQC</text>
  <text x="280" y="120" text-anchor="middle" class="tool-text" fill="white">Quality Control</text>

  <!-- CRISPResso2 Stage -->
  <rect x="390" y="80" width="120" height="60" rx="10" class="nf-blue" stroke="#0D4F8C" stroke-width="2"/>
  <text x="450" y="105" text-anchor="middle" class="pipeline-text" fill="white">CRISPResso2</text>
  <text x="450" y="120" text-anchor="middle" class="tool-text" fill="white">CRISPR Analysis</text>

  <!-- MultiQC Stage -->
  <rect x="560" y="80" width="120" height="60" rx="10" class="light-green" stroke="#24B064" stroke-width="2"/>
  <text x="620" y="105" text-anchor="middle" class="pipeline-text">MultiQC</text>
  <text x="620" y="120" text-anchor="middle" class="tool-text">Reporting</text>

  <!-- Amplicon/Guide Input -->
  <rect x="300" y="200" width="140" height="50" rx="10" class="light-blue" stroke="#0D4F8C" stroke-width="2"/>
  <text x="370" y="220" text-anchor="middle" class="pipeline-text">Reference Data</text>
  <text x="370" y="235" text-anchor="middle" class="tool-text">Amplicon + Guide</text>

  <!-- Arrows -->
  <!-- Input to FastQC -->
  <path d="M 170 110 L 210 110" stroke="#333" stroke-width="3" marker-end="url(#arrowhead)"/>
  
  <!-- FastQC to CRISPResso2 -->
  <path d="M 340 110 L 380 110" stroke="#333" stroke-width="3" marker-end="url(#arrowhead)"/>
  
  <!-- CRISPResso2 to MultiQC -->
  <path d="M 510 110 L 550 110" stroke="#333" stroke-width="3" marker-end="url(#arrowhead)"/>
  
  <!-- Reference to CRISPResso2 -->
  <path d="M 420 200 L 440 150" stroke="#333" stroke-width="3" marker-end="url(#arrowhead)"/>

  <!-- Arrow marker definition -->
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="10" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#333"/>
    </marker>
  </defs>

  <!-- Output Labels -->
  <text x="110" y="180" text-anchor="middle" class="tool-text">• Single/Paired reads</text>
  <text x="110" y="195" text-anchor="middle" class="tool-text">• Sample metadata</text>

  <text x="280" y="180" text-anchor="middle" class="tool-text">• Quality reports</text>
  <text x="280" y="195" text-anchor="middle" class="tool-text">• Read statistics</text>

  <text x="450" y="180" text-anchor="middle" class="tool-text">• Editing efficiency</text>
  <text x="450" y="195" text-anchor="middle" class="tool-text">• Indel analysis</text>

  <text x="620" y="180" text-anchor="middle" class="tool-text">• Unified dashboard</text>
  <text x="620" y="195" text-anchor="middle" class="tool-text">• Summary metrics</text>

  <!-- nf-core branding -->
  <text x="400" y="370" text-anchor="middle" class="tool-text" font-style="italic">nf-core pipeline for CRISPR editing analysis</text>
</svg>
